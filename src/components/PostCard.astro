
---
const { post } = Astro.props
---
<article class="rounded-lg hover:border-slate-300 transition">
  <a href={post.url} class="no-underline group block">
    <h2 class="m-0 text-xl md:text-xl font-semibold tracking-tight group-hover:underline">
      {post.frontmatter.title}
    </h2>
    <p class="mt-3 mb-3 text-sm text-slate-500">{post.frontmatter.date}</p>
    {post.frontmatter.tags?.length > 0 && (
      <ul class="mt-2 flex flex-wrap gap-2">
        {post.frontmatter.tags.map((tag) => (
          <li class="text-xs px-2 py-1 rounded-full bg-slate-100 text-slate-700">{tag}</li>
        ))}
      </ul>
    )}
    {post.frontmatter.description && <p class="mt-3 text-slate-700">{post.frontmatter.description}</p>}
  </a>
</article>
